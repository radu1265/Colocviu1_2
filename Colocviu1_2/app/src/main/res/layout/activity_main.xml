<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Prima linie cu EditText și Button (Add) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- EditText pentru "Next Term" -->
        <EditText
            android:id="@+id/editTextNextTerm"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="Next Term" />

        <!-- Button pentru "Add" -->
        <Button
            android:id="@+id/buttonAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add" />
    </LinearLayout>

    <!-- TextView needitabil pentru "All Term" -->
    <TextView
        android:id="@+id/textViewAllTerms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="All Terms: "
        android:paddingTop="16dp"
        android:background="#EEEEEE"
        android:padding="8dp"
        android:editable="false" />

    <!-- Button "Compute" centrat pe orizontală -->
    <Button
        android:id="@+id/buttonCompute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Compute"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp" />
</LinearLayout>
